<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2FFB300"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/profileimg"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:tooltipText="This is your profile image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/baseline_local_laundry_service_24"/>
    <!-- Heading: Collection and Delivery -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection and Delivery"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New collection date and time"
        android:textColor="@android:color/black" />

    <!-- Use DatePicker and TimePicker for better date and time selection -->
    <Button
        android:id="@+id/collectionDateTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Collection Date and Time"
        android:onClick="showCollectionDateTimePickerDialog"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/deliveryDateTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Delivery Date and Time"
        android:onClick="showDeliveryDateTimePickerDialog"
        android:layout_gravity="center_horizontal"/>

    <!-- Use DatePicker and TimePicker for better date and time selection -->
    <EditText
        android:id="@+id/specialInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add any special instructions for the..."
        android:minHeight="48dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textColor="@android:color/black" />

    <!-- NEXT Button -->
    <RadioGroup
        android:id="@+id/frequencyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/onceOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just once"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/weeklyOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/twoWeeksOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every two weeks"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/fourWeeksOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every four weeks"
            android:textColor="@android:color/black" />
    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"
        android:text="NEXT" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="48dp"
        android:text="Cancel"
        android:textColor="@android:color/black" />
</LinearLayout>
